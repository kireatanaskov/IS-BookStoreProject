@model BookStore.Domain.DTO.ShoppingCartDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@if (Model.TotalPrice > 0)
{
    <form asp-controller="ShoppingCarts" asp-action="Order" method="post">
        <button>Pay Order</button>
    </form>
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Book Id</th>
            <th>Quantity</th>
            <th>Single Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Books.Count() == 0)
        {
            <tr>
                <td colspan="5" class="text-center"><b><i>No active products</i></b></td>
            </tr>
        }
        else
        {
            @for (int i = 0; i < Model.Books.Count(); i++)
            {
                var item = Model.Books[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Book.Price)
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="DeleteBookFromShoppingCart" asp-route-bookId="@item.BookId">Remove</a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        @if (Model.Books.Count() != 0)
        {
            <tr>
                <th>Total Cart Price:</th>
                <th></th>
                <th></th>
                <th>Ден:@Model.TotalPrice</th>
                <th></th>
            </tr>
        }
    </tfoot>
</table>